<h1>Display your Pirate here</h1>
  <div class="pirate">
    <h3>Name: <%= @pirates.name %></h3>
    <h3>Height: <%= @pirates.height %></h3>
    <h3>Weight: <%= @pirates.weight %></h3>

  </div>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>
